@model System.Collections.Generic.IEnumerable<CeApp.DataObjects.Product.Product>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>
<hr />

@using (Html.BeginForm("Index", "Product", FormMethod.Get, new { id = "ordersForm"}))
{
    <div class="form-group row">
        <label class="col-sm-2 text-right">Search for product:</label>
        <div class="col-sm-10">
            @Html.TextBox("search", null, new { @class = "form-control", style = "display: inline" })
            <a class="btn btn-default" href="@Url.Action("Index")">Show All</a>
        </div>
    </div>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Product No</th>
            <th>EAN</th>
            <th>Stock</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@(product.Name ?? "[Missing Name]")</td>
                <td>@product.MerchantProductNo</td>
                <td>@product.Ean</td>
                <td>@product.Stock</td>
                <td>@product.Price</td>
                <td>
                    <a class="btn btn-default" href="@Url.Action("Get", new {merchantProductNo = product.MerchantProductNo})">
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model System.Collections.Generic.IEnumerable<CeApp.DataObjects.Product.Product>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<table class="table table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Product No</th>
        <th>Stock</th>
        <th>Price</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@(product.Name ?? "[Missing Name]")</td>
            <td>@product.MerchantProductNo</td>
            <td>@product.Stock</td>
            <td>@product.Price</td>
            <td>
                <a class="btn btn-default" href="@Url.Action("Get", new {merchantProductNo = product.MerchantProductNo})">
                    Details
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>

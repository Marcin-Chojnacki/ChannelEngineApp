@model CeApp.DataObjects.Product.Product

@{
    ViewBag.Title = "Products";
}

<h2>
    @Model.Name
</h2>
<hr />

@DisplayMessage()

<h4>Product Details:</h4>
<table class="table table-hover table-bordered">
    <tbody>
        <tr>
            <td>Name</td>
            <td>@(Model.Name ?? "[Missing Name]")</td>
        </tr>
        <tr>
            <td>Description</td>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <td>Brand</td>
            <td>@Model.Brand</td>
        </tr>
        <tr>
            <td>Size</td>
            <td>@Model.Size</td>
        </tr>
        <tr>
            <td>Color</td>
            <td>@Model.Color</td>
        </tr>
        <tr>
            <td>Product No</td>
            <td>@Model.MerchantProductNo</td>
        </tr>
        <tr>
            <td>EAN</td>
            <td>@(Model.Ean ?? "-")</td>
        </tr>
        <tr>
            <td>Stock</td>
            <td>
                @using (Html.BeginForm("UpdateStock", "Product", FormMethod.Post, new { @class = "form-inline" }))
                {
                    <div>
                        @Html.TextBox("stock", Model.Stock, new { @class = "form-control" })
                        @Html.Hidden("merchantProductNo", Model.MerchantProductNo)
                        <button class="btn btn-default">Update</button>
                    </div>
                }
            </td>
        </tr>
        <tr>
            <td>Price</td>
            <td>@Model.Price</td>
        </tr>
        <tr>
            <td>Shipping Cost</td>
            <td>@Model.ShippingCost</td>
        </tr>
    </tbody>
</table>

@helper DisplayMessage()
{
    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-@ViewBag.MessageType" role="alert">
            <p class="alert-link">@ViewBag.Message</p>
        </div>
    }
}


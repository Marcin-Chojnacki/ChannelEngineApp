@model System.Collections.Generic.IEnumerable<CeApp.Services.Product.Top5Product>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>
<hr />

<table class="table table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Product No</th>
        <th>EAN</th>
        <th>Stock</th>
        <th>Total Quantity (In Progress)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@(product.Product.Name ?? "[Missing Name]")</td>
            <td>@product.Product.MerchantProductNo</td>
            <td>@product.Product.Ean</td>
            <td>@product.Product.Stock</td>
            <td>@product.TotalQuantity</td>
            <td>
                <a class="btn btn-default" href="@Url.Action("Get", new {merchantProductNo = product.Product.MerchantProductNo})">
                    Details
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>